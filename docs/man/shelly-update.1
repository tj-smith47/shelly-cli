.TH "SHELLY" "1" "Dec 2025" "Shelly CLI" "User Commands"

.SH NAME
shelly-update - Update shelly to the latest version


.SH SYNOPSIS
\fBshelly update [flags]\fP


.SH DESCRIPTION
Update shelly to the latest version.

.PP
By default, downloads and installs the latest stable release from GitHub.
Use --check to only check for updates without installing.
Use --version to install a specific version.


.SH OPTIONS
\fB--channel\fP="stable"
	Release channel (stable, beta)

.PP
\fB-c\fP, \fB--check\fP[=false]
	Check for updates without installing

.PP
\fB-h\fP, \fB--help\fP[=false]
	help for update

.PP
\fB--include-pre\fP[=false]
	Include pre-release versions

.PP
\fB--rollback\fP[=false]
	Rollback to previous version

.PP
\fB--version\fP=""
	Install a specific version

.PP
\fB-y\fP, \fB--yes\fP[=false]
	Skip confirmation prompt


.SH OPTIONS INHERITED FROM PARENT COMMANDS
\fB--config\fP=""
	Config file (default $HOME/.config/shelly/config.yaml)

.PP
\fB--log-categories\fP=""
	Filter logs by category (comma-separated: network,api,device,config,auth,plugin)

.PP
\fB--log-json\fP[=false]
	Output logs in JSON format

.PP
\fB--no-color\fP[=false]
	Disable colored output

.PP
\fB-o\fP, \fB--output\fP="table"
	Output format (table, json, yaml, template)

.PP
\fB--plain\fP[=false]
	Disable borders and colors (machine-readable output)

.PP
\fB-q\fP, \fB--quiet\fP[=false]
	Suppress non-essential output

.PP
\fB--template\fP=""
	Go template string for output (use with -o template)

.PP
\fB-v\fP, \fB--verbose\fP[=0]
	Increase verbosity (-v=info, -vv=debug, -vvv=trace)


.SH EXAMPLE
.EX
  # Check for updates
  shelly update --check

  # Update to latest version
  shelly update

  # Update to a specific version
  shelly update --version v1.2.0

  # Update with pre-releases
  shelly update --include-pre

  # Update without confirmation
  shelly update --yes
.EE


.SH SEE ALSO
\fBshelly(1)\fP
