.TH "SHELLY" "1" "Dec 2025" "Shelly CLI" "User Commands"

.SH NAME
shelly-auth-set - Set authentication credentials


.SH SYNOPSIS
\fBshelly auth set  [flags]\fP


.SH DESCRIPTION
Set authentication credentials for a device.

.PP
This enables authentication if not already enabled. The username defaults
to "admin" if not specified.


.SH OPTIONS
\fB-h\fP, \fB--help\fP[=false]
	help for set

.PP
\fB--password\fP=""
	Password for authentication (required)

.PP
\fB--realm\fP=""
	Authentication realm (optional)

.PP
\fB--user\fP="admin"
	Username for authentication


.SH OPTIONS INHERITED FROM PARENT COMMANDS
\fB--config\fP=""
	Config file (default $HOME/.config/shelly/config.yaml)

.PP
\fB--log-categories\fP=""
	Filter logs by category (comma-separated: network,api,device,config,auth,plugin)

.PP
\fB--log-json\fP[=false]
	Output logs in JSON format

.PP
\fB--no-color\fP[=false]
	Disable colored output

.PP
\fB-o\fP, \fB--output\fP="table"
	Output format (table, json, yaml, template)

.PP
\fB--plain\fP[=false]
	Disable borders and colors (machine-readable output)

.PP
\fB-q\fP, \fB--quiet\fP[=false]
	Suppress non-essential output

.PP
\fB--template\fP=""
	Go template string for output (use with -o template)

.PP
\fB-v\fP, \fB--verbose\fP[=0]
	Increase verbosity (-v=info, -vv=debug, -vvv=trace)


.SH EXAMPLE
.EX
  # Set credentials with default username
  shelly auth set living-room --password secret

  # Set credentials with custom username
  shelly auth set living-room --user myuser --password secret
.EE


.SH SEE ALSO
\fBshelly-auth(1)\fP
